{% extends 'base.html.twig' %}
{% block mainTitle %} Kategori Listesi{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-5">


                {% if error is defined %}
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}


                <h3 class="box-title m-b-20">Kaydol</h3>

                {{ form_start(form, {'method':'POST', 'attr': {'id': 'validation', 'class':'validateDontSubmit'}}) }}
                    {{ form_widget(form) }}
                    <input type="submit" name="submit" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light mb-4">
                {{ form_end(form) }}
                <a href="{{ path('signin') }}" >Giriş Yap</a>

            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}